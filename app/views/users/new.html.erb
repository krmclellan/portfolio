<div class="signup-section">
	<div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sign Up</h1>
            </div>
        </div>


	<div class="signup-form">
		<%= form_for @user do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %><br />

			<%= f.label :email %>
			<%= f.text_field :email %><br />

			<%= f.label :password %>
			<%= f.text_field :password %><br />

			<%= f.submit "Create" %>
		<% end %>
	</div>
	</div>
</div>