<% content_for :head do %>
	<% render "froalalinks" %>
<% end %>

<div class="article-section">
	<div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Create a Blog Article<br />
                    <small>Personal content creation</small>
                </h1>
            </div>
        </div>

	<div class="new-article">
		<h2>New Article</h2>

		<%= render 'form' %>
		
		<br>
		<%= link_to 'Back', blog_path %>
			
	</div>
</div>

<!-- Include JS files. -->
    <script type="text/javascript" src="..froala-wysiwyg-editor/js/froala_editor.min.js"></script>

    <!-- Include Code Mirror. -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.3.0/codemirror.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.3.0/mode/xml/xml.min.js"></script>

	<script>
	  $(function() {
	      $('div#edit').froalaEditor({
	      	toolbarButtons: ['bold', 'italic', 'underline', 'insertImage', 'insertLink']
	      	pluginsEnabled: null
	      })
	  });
	</script>
