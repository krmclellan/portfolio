<div class="guestbook-section">
<div class="container">
        
        <div class="col-lg-12">
            <h1 class="page-header">Guestbook<br />
                <small>Leave a message</small>
            </h1>
        </div>

<!-- Portfolio Item Row -->
      
        <div class="col-lg-12">
            <p class="lead">Write a note in my guestbook to tell me who you are and where you're visiting from.</p>
        </div>
      <%= form_for @new_post do |f| %>
        <%= f.text_area :comment, class: "comment_area" %><br />
        <%= f.submit "Post Your Message", class: "guest_button" %>
        <% end %>

      <div class="guestbook-info">
        
            <div class="col-xs-12 col-md-6">
                <ul class="comment_list">
                <% @all_posts.each do |p| %>
                <li><%=p.comment %><br />
                <%= p.created_at %></li>

                <% end %>
                </ul>

            </div>
           
        </div>

        </div>
        </div>