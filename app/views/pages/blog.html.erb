<!-- Blog Item Heading -->
        
<div class="blog-section">
<div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Blog<br />
                    <small>Personal content creation</small>
                </h1>
            </div>
        </div>

       
      

       <div class="blog-articles">

        <% @articles.each do |article| %>
            <div class="blog-post">
            <h3><%= article.title %></h3>
            <div class="row">
            <div class="col-md-4 img320-holder"></div>
            <div class="col-md-8">
            <p><%= article.text %></p>
            <p><%= link_to "More", article_path(article) %></p>
            </div>
            </div>
            <table>
                <tr>
                    <td><%= link_to "Show", article_path(article) %></td>
                    <td><%= link_to "Edit", edit_article_path(article) %></td>
                    <td><%= link_to "Delete", article_path(article), 
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
                    <td><%= link_to 'New article', new_article_path %></td>
                </tr>
            </table>
            </div>
        <% end %>

        <hr class="project-divider">
        </div>

</div>
</div>