<!-- Blog Item Heading -->
<% content_for :head do %>
<title>Technical Blog - Karen McLellan</title>
<% end %>
        
<div class="blog-section">
    <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Blog<br />
                        <small>Personal content creation</small>
                    </h1>
                </div>
            </div>

           <div class="row user-info">
           <ul>
            <% if current_user %>
                <li><%= current_user.name %></li>
                <li><%= link_to 'New article', new_article_path %></li>
                <li><%= link_to "Log out", logout_path, method: "delete", 
                data: { confirm: 'Are you sure you want to end your session?' } %></li>
            <% else %>
                <li><%= link_to "Login", 'login' %></li>
            <% end %>
          </ul>
          </div>

           <div class="blog-articles">

                <% @articles.each do |article| %>
                    <div class="blog-post">
                    <h3><%= article.title %></h3>

                    <div class="row">

                    <div class="col-md-4 img320-holder"></div>

                    <div class="col-md-8">
                    <p><%= truncate article.text, length: 700 %></p>
                    <p><%= link_to "More", article_path(article) %></p>
                    </div>
                    </div>

                    <div class="row">
                    <% if current_user %>
                    <table>
                        <tr>
                            <td><%= link_to "Show", article_path(article) %></td>
                            <td><%= link_to "Edit", edit_article_path(article) %></td>
                            <td><%= link_to "Delete", article_path(article), 
                                    method: :delete,
                                    data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    </table>
                    <% end %>
                    </div>

                    
                    </div>
                <% end %>

            <hr class="project-divider">
            </div>

    </div>
</div>